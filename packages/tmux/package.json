{
  "name": "@vfi-pub/tmux",
  "version": "0.1.0",
  "description": "TypeScript library for programmatically controlling tmux â€” inspired by libtmux + tmuxp",
  "type": "module",
  "license": "MIT",
  "author": "VisionFI",
  "repository": {
    "type": "git",
    "url": "https://github.com/visionfi/vfi-pub-lib.git",
    "directory": "packages/tmux"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "vfi-tmux": "./bin/vfi-tmux.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./workspace": {
      "import": "./dist/workspace/index.js",
      "types": "./dist/workspace/index.d.ts"
    },
    "./plugin": {
      "import": "./dist/plugin/index.js",
      "types": "./dist/plugin/index.d.ts"
    }
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun run typecheck && bun build ./src/index.ts ./src/core/index.ts ./src/workspace/index.ts ./src/plugin/index.ts ./src/cli/index.ts --outdir ./dist --target node --format esm && tsc --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "cli": "bun run bin/vfi-tmux.ts"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "keywords": [
    "tmux",
    "terminal",
    "multiplexer",
    "session",
    "workspace",
    "automation"
  ]
}
